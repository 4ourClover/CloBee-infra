apiVersion: kops.k8s.io/v1alpha2
kind: InstanceGroup
metadata:
    name: flentd
    labels:
        kops.k8s.io/cluster: clobee.k8s.local
spec:
    role: Node
    minSize: 1
    maxSize: 1
    instanceType: t3.small
    subnets:
        - clobee-vpc-public-subnet-5
    nodeLabels:
        role: fleuntd
    additionalSecurityGroups:
        - ${TF_VAR_APP_SG_ID}
